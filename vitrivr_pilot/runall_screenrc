# don't display the copyright page
startup_message off

# increase scrollback buffer size
defscrollback 10000

# create windows
screen -t Cottontail singularity exec --bind `pwd`/cottontaildb-data:/cottontaildb-data cottontail.sif /cottontaildb-bin/bin/cottontaildb /cottontaildb-data/config.json
screen -t Cineast singularity run cineast.sif
screen -t Vitrivr singularity run --name vitrivr --bind vitrivr_built:/usr/share/nginx/html nginx.sif
